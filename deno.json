{
  "name": "@timharek/linkding",
  "version": "2.0.0",
  "author": "Tim HÃ¥rek Andreassen <tim@harek.no>",
  "exports": "mod.ts",
  "tasks": {
    "run": "deno run --allow-env --allow-read --allow-net src/cli.ts",
    "check": "deno lint && deno fmt --check && deno check **/*.ts",
    "setup:hooks": "deno run -A -r https://deno.land/x/githooks/githooks.ts"
  },
  "githooks": {
    "pre-commit": "check"
  },
  "lint": {
    "include": [
      "./"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "explicit-function-return-type"
      ]
    }
  },
  "fmt": {
    "include": [
      "./"
    ],
    "exclude": [
      "./README.md"
    ],
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
